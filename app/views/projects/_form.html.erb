    <%= form_for @project do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
     
      <p>
        <%= f.label :time %><br>
        <%= f.text_area :time %>
      </p>

      <p>
        <%= f.label :minor %><br>
        <%= f.text_area :minor %>
      </p>

      <p>
        <%= f.label :work %><br>
        <%= f.text_area :work %>
      </p>

      <p>
        <%= f.label :result %><br>
        <%= f.text_area :result %>
      </p>
     
      <p>
        <%= f.submit %>
      </p>
    <% end %>